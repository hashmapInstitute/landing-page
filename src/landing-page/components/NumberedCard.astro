---
const { title, body, number, children } = Astro.props;
---

<div class="card">
	<div>
		<h3>{ title }</h3>
		<p>{ body }<slot /></p>
	</div>
	<div>
		<div class="number">
			<span>{number}</span>
		</div>
	</div>
</div>

<style>
  .card {
		display: flex;
    background: #fff;
    border-radius: 3px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    margin: 0 0 1rem;
    padding: 1rem;
    /* width: calc(50% - 2.5rem); */
  }

  .card h3 {
    font-size: 26px;
    margin: 0 0 0.5rem;
    color: var(--hi-purple);
  }

	.number {
		border: 15px solid var(--hi-peach);
		border-radius: 100%;
		width: 100px;
		height: 100px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.number span {
		/* flex-grow: 1; */
		font-size: 64px;
		font-family: var(--font-header);
	}
</style>